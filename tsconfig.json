{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": false,
        "allowJs": false,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./demo/*"],
            "@otakustay/react-source-view": ["./src/index.ts"],
            "@otakustay/react-source-view/*": ["./src/*"]
        }
    },
    "include": ["src", "demo", "*.ts"]
}
